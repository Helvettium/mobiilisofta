<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    card_view:cardBackgroundColor="@color/backGroundWhite"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:contentPadding="0dp"
    android:focusable="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/StopContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/stopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:text="title"
            android:textSize="24sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:stretchColumns="0,1"
            card_view:layout_constraintTop_toBottomOf="@+id/stopName">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/lightGrey">

                <TextView
                    android:id="@+id/stopBusDest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Keskustori" />

                <TextView
                    android:id="@+id/stopBusArrival1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0:00" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/stopBusDest2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Keskustori" />

                <TextView
                    android:id="@+id/stopBusArrival2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0:00" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey">

                <TextView
                    android:id="@+id/stopBusDest3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Keskustori" />

                <TextView
                    android:id="@+id/stopBusArrival3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0:00" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/stopBusDest4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Keskustori" />

                <TextView
                    android:id="@+id/stopBusArrival4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0:00" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGrey">

                <TextView
                    android:id="@+id/stopBusDest5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Keskustori" />

                <TextView
                    android:id="@+id/stopBusArrival5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0:00" />
            </TableRow>

        </TableLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>